<% include partials/header %>
    <div class="ui container blog" id="blog">
        <% if(blogs.length == 0){ %>
            <div class="come-back">
                <h1>Check back soon to see what I have to say... </h1>
            </div>
        <% } %>
        

        <h4 class="ui horizontal header divider">All Posts
        </h4>

        <% if (blogs.length > 0) { %>
        <div class="ui relaxed divided items">
            <% blogs.forEach(function(blog){ %>
            <div class="item">
                <div class="ui small image">
                  <img src="<%=blog.image%>">
                </div>
                <div class="content">
                    <a class="header" href="/blog/<%=blog._id%>"><%= blog.title %></a>
                    <div class="meta">
                        <% if(moment().diff(blog.created, 'days') < 3){ %>
                            <a><%= moment(blog.created).fromNow(); %></a>
                        <% } else { %>
                                <a><%= moment(blog.created).format('MMMM Do, YYYY')%></a>
                        <% }; %>
                        <!--<a>Category</a>-->
                    </div>
                    <div class="description">
                    <%= blog.body.substring(0, 250) + "..." %>
                    </div>
                    <div class="extra">
                        <a class="ui right floated primary button" href="/blog/<%=blog._id%>">
                            Read Post<i class="right chevron icon"></i>
                        </a>
                        <div class="ui label">
                          <%= blog.category[0].name %>
                        </div>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
    </div>
    <% }; %>
    
        

<% include partials/footer %>